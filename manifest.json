{
    "manifest_version": 3,
    "name": "YouTube Ad Skipper",
    "version": "1.1",
    "description": "Automatically skips YouTube advertisements",
    "permissions": [
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }